template(name="exerciseUpdate")
  h3 
    a(href="  {{pathFor 'sectionUpdate' id=this.exercise.sectionId}}") {{section.name}}
    i.fa.fa-angle-double-right {{exercise.name}}

  section
    +autoForm collection="Exercise" id="exerciseForm" type="update" doc=exercise 
      fieldset
        legend Edit Exercise 
        +afQuickField name='name'
        +afQuickField name='slide' rows=30 class='wysiwyg'

      button.btn.btn-default.create-module(type="submit") Update Exercise