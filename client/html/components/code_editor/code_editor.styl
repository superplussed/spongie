#code-editor
  position: relative
  margin-top: 40px
  .slide
    position: absolute
    left: 0
    top: 0
    width: 200px
    h4
      padding: 10px
      font-size: 16px

  
  .ace-editor-wrapper
    margin: 20px 0 0 220px
    min-height: 400px
    position: relative
    .ace-editor, .ace-output, #ace-editor-css, #ace-editor-html, .editors
      width: 48%
      display: inline-block
      height: 100%
      min-height: 400px
      vertical-align: top
      margin-right: 20px
    .ace-editor
      background: #000
    .ace-output
      margin-right: 0
      border: 4px solid black