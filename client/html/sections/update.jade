template(name="sectionUpdate")
  h3 
    a(href="{{pathFor 'moduleUpdate' id=this.section.moduleId}}") {{module.name}}
    i.fa.fa-angle-double-right {{section.name}}

  section
    +autoForm collection="Section" id="sectionForm" type="update" doc=section 
      fieldset
        legend Edit Section 
        +afQuickField name='name'

      button.btn.btn-default.create-module(type="submit") Update Section

  section
    fieldset
      legend Edit Exercises
      if exercises
        ul.index
          each exercises
            li
              .name
                =name
              .buttons
                a(href="{{pathFor 'exerciseUpdate' id=this._id}}", class="btn btn-default btn-sm")
                  i.fa.fa-pencil.edit-section
                  | Edit
                .btn.btn-default.btn-sm.delete-exercise
                  i.fa.fa-times
                  | Delete

  section
    +autoForm collection="Exercise" id="exerciseForm" type="insert" 
      fieldset
        legend Add Exercise 
        +afQuickField name='name'
        +afFieldInput name="sectionId" type="hidden" value=section._id
        +afFieldInput name="creatorId" type="hidden" value=currentUserId

      button.btn.btn-default.create-module(type="submit") Add Exercise