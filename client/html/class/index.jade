template(name="classIndex")
  h3 Classes
  ul.classes
    each unjoinedClasses
      li 
        .name {{name}}
        if userHasJoinedClass
          a.enter.btn.btn-default(href="/class/{{_id}}")
            i.fa.fa-download
            | Enter

          .leave.btn.btn-default 
            i.fa.fa-times
            | Withdraw
        else
          .join.btn.btn-default 
            i.fa.fa-download
            | Enroll
        if createdByMe
          .delete-class.btn.btn-default 
            i.fa.fa-times
            | Delete Class

  a.create-class.btn.btn-default 
    i.fa.fa-plus
    | Create Class

