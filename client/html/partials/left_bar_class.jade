template(name="classModuleLink")
  a(href="{{pathFor 'moduleShow' classId=classId moduleId=moduleId}}") 
    .module
      {{classModuleName}}

template(name="leftBarClass")
  nav
    a.current(href="{{pathFor 'classShow' id=classId}}")
      .current-class {{className}}
    .modules
      if classModules
        each classModules
          +classModuleLink
  .divider