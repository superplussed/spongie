#static-slide
  .slide
    margin: 20px 0

#code-editor
  position: relative
  .slide
    position: absolute
    left: 0
    top: 0
    width: 200px
    h4
      padding: 10px
      font-size: 16px
  
  .ace-editor-wrapper
    margin: 20px 0 0 220px
    min-height: 400px
    .ace-editor, .ace-output 
      width: 48%
      display: inline-block
      height: 100%
      min-height: 400px
    .ace-editor
      margin-right: 20px
      background: #000
    .ace-output
      border: 4px solid black

.slide
  background: rgb(66, 65, 65);
  color: white;
  min-height: 400px
  overflow: hidden
  img 
    border: 1px solid white
  h4 
    background: #5C5C5C
    padding: 20px;
    margin: 0;
    text-transform: uppercase;
    font-weight: 300;
    font-size: 24px;
  article
    padding: 20px
    a 
      color: white
      text-decoration: underline