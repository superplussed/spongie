#static-slide
  .slide
    margin: 20px 0

#code-editor
  position: relative
  .slide
    position: absolute
    left: 0
    top: 0
    width: 200px
    h4
      padding: 10px
      font-size: 16px

  
  .ace-editor-wrapper
    margin: 20px 0 0 220px
    min-height: 400px
    position: relative
    .ace-editor, .ace-output, #ace-editor-css, #ace-editor-html, .editors
      width: 48%
      display: inline-block
      height: 100%
      min-height: 400px
      vertical-align: top
      margin-right: 20px
    .ace-editor
      background: #000
    .ace-output
      margin-right: 0
      border: 4px solid black

.slide
  background: rgb(66, 65, 65);
  color: white;
  min-height: 400px
  overflow: hidden

  ul.checklist
    font-size: 18px;
    list-style-type: disc!important;
    margin: 0 0 20px 20px;

  img 
    border: 1px solid white
    margin-bottom: 20px
  h4 
    background: #5C5C5C
    padding: 20px;
    margin: 0;
    text-transform: uppercase;
    font-weight: 300;
    font-size: 24px;
  article
    padding: 20px
    a 
      color: white
      text-decoration: underline